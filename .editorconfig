# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# newline ending every file
[*]
insert_final_newline = true

# matches multiple files with brace expansion notation
# Set default charset
[*.{py,md}]
charset = utf-8

# 2 space indentation
[*.py]
indent_style = space
indent_size = 2