  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Current File",
          "type": "python",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "cwd": "${fileDirname}",
          //"args": ["--mock-streams"],
          "justMyCode": false
      },
      {
        "name": "Web App",
        "type": "python",
        "request": "launch",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "module": "amplipi.asgi",
        "env" : {"WEB_PORT" : "5000"},
        "justMyCode": false
      },
      {
        "name": "Display",
        "type": "python",
        "request": "launch",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "module": "amplipi.display.display",
        "justMyCode": false
      },
      {
          "name": "Flash",
          "type": "python",
          "request": "launch",
          "console": "integratedTerminal",
          "cwd": "${workspaceFolder}",
          "module": "amplipi.hw",
          "args": ["--flash", "fw/preamp/build/preamp_bd.bin"],
          "justMyCode": false
      }
  ]
}
